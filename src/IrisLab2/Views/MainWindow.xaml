<Window x:Class="IrisLab2.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IrisLab2"
        mc:Ignorable="d"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2.5*"/>
        </Grid.RowDefinitions>

        <Label Content="{Binding FileName}"/>
        <Button Grid.Row="1" Content="Load file" Command="{Binding LoadFileCommand}"/>
        <Border Grid.Row="2" CornerRadius="10">
            <lvc:CartesianChart Series="{Binding GraphicsSeriesCollections[0]}">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="{Binding GraphicsNames[0]}" Labels=""></lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <!--<lvc:CartesianChart.AxisY>
                        <lvc:Axis LabelFormatter="{Binding Formatter}"></lvc:Axis>
                    </lvc:CartesianChart.AxisY> -->
            </lvc:CartesianChart>
        </Border>
    </Grid>
</Window>
